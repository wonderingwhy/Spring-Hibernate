<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.sprhib.model.Users" table="users" catalog="persons">
		<id name="id" type="int" column="id"><generator class="identity"/>
		</id>
		<property name="username" column="username" length="10" not-null="true" type="string"/>
		<property name="password" column="password" length="20" not-null="true" type="string"/>
	</class>
	
</hibernate-mapping>
